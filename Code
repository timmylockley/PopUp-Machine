<body>
    <div id="setupUI">
        <h1>Popup Machine</h1> 
        <h2 id="harmless">This is Harmless</h2>
        <div class="container">
            <p>Enter the desired message or image URL, choose how many times to show it, then click start.</p>
            <input type="text" id="message" placeholder="Enter text message">
            <br>
            <input type="text" id="imageURL" placeholder="Enter image URL (optional)">
            <br>
            <select id="popupCount">
                <option value="infinite">Infinite</option>
                <option value="10">10</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
            <br>
            <button onclick="startPrank()">Start</button>
        </div>
    </div>

    <div id="instructions">
        <h1>Enable Popups to Continue</h1>
        <p>To run this, you need to allow popups for this site.</p>

        <h2>Chrome (Desktop)</h2>
        <ol>
            <li>Look at the right side of the address bar (top of Chrome).</li>
            <li>Click the popup blocker icon.</li>
            <li>Select "Always allow popups from this site".</li>
        </ol>

        <h2>Chrome (Android)</h2>
        <ol>
            <li>Tap the three dots menu.</li>
            <li>Go to "Settings" → "Site settings" → "Pop-ups and redirects".</li>
            <li>Allow popups.</li>
        </ol>

        <h2>Safari (iPhone/iPad)</h2>
        <ol>
            <li>Open the Settings app.</li>
            <li>Scroll to Safari.</li>
            <li>Turn off "Block Pop-ups".</li>
        </ol>

        <h2>Firefox</h2>
        <ol>
            <li>Look for the popup icon in the address bar.</li>
            <li>Click it and allow popups for this site.</li>
        </ol>

        <p><strong>Once popups are allowed, click anywhere on this page to continue.</strong></p>
    </div>

    <script>
        let message = "";
        let imageURL = "";
        let count = 0;

        function bypassPopupBlocker() {
            for (let i = 0; i < 10; i++) {  
                let newWindow = window.open("about:blank", "_blank");
                if (newWindow) {
                    newWindow.close();
                }
            }
        }

        function showPopup(content) {
            let newWindow = window.open("", "_blank", "width=400,height=400");
            if (newWindow) {
                newWindow.document.write(content);
                newWindow.document.close();
            }
        }

        function startPrank() {
            message = document.getElementById("message").value || "Ha Ha You Are Hacked!";
            imageURL = document.getElementById("imageURL").value;
            let countValue = document.getElementById("popupCount").value;

            count = (countValue === "infinite") ? Infinity : parseInt(countValue);

            // Hide setup, show instructions
            document.getElementById("setupUI").style.display = "none";
            document.getElementById("instructions").style.display = "block";

            // Silently try to allow popups
            bypassPopupBlocker();

            // Wait for click after enabling popups
            document.body.addEventListener("click", () => {
                let popupContent;
                if (imageURL) {
                    popupContent = `<html><body style='background:black;display:flex;justify-content:center;align-items:center;height:100%;'>
                                    <img src="${imageURL}" style="max-width:100%;max-height:100%;">
                                    </body></html>`;
                } else {
                    popupContent = `<html><body style='background:black;color:red;font-size:30px;text-align:center;'>
                                    <h1>${message}</h1>
                                    </body></html>`;
                }

                let i = 0;
                let spamInterval = setInterval(() => {
                    if (i >= count) {
                        clearInterval(spamInterval);
                        return;
                    }
                    showPopup(popupContent);
                    i++;
                }, 200);
            }, { once: true });
        }
    </script>
